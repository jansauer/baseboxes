{
  "variables": {
    "version": ""
  },
  "builders": [
    {
      "vm_name": "fedora21-core",
      "type": "virtualbox-iso",
      "guest_os_type": "Fedora_64",
      "iso_urls": [
        "http://mirror.netcologne.de/fedora/linux/releases/21/Server/x86_64/iso/Fedora-Server-netinst-x86_64-21.iso",
        "http://ftp.tu-chemnitz.de/pub/linux/fedora/linux/releases/21/Server/x86_64/iso/Fedora-Server-netinst-x86_64-21.iso",
        "http://download.fedoraproject.org/pub/fedora/linux/releases/21/Server/x86_64/iso/Fedora-Server-netinst-x86_64-21.iso"
      ],
      "iso_checksum": "56af126a50c227d779a200b414f68ea7bcf58e21c8035500cd21ba164f85b9b4",
      "iso_checksum_type": "sha256",
      "http_directory": "http",
      "headless": true,
      "boot_wait": "15s",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/fedora21-core.cfg<enter>"
      ],
      "hard_drive_interface": "sata",
      "disk_size": 60000,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",
      "virtualbox_version_file": "/etc/vbox_version",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -h now",
      "output_directory": "../../packer_output/fedora21-core_virtualbox-iso"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/vmtools.sh",
        "scripts/logging.sh",
        "scripts/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "../../output/fedora21-core_{{.Provider}}_{{user `version`}}.box",
      "compression_level": 9,
      "keep_input_artifact": false
    }
  ]
}
